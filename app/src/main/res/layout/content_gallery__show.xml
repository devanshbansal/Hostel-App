<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"   style="@style/matchWidthheightMatch"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    tools:context="com.ektastudio.engggirl.hostliz.Gallery_Show">
    <Button
        android:id="@+id/buttonwardentop"
        style="@style/matchWidthWrapHeight"
        android:drawableLeft="@drawable/ic_keyboard_arrow_left_white_24dp"
        android:background="@color/colorPrimary"
        android:text="Students Life"
        />

    <ViewFlipper
        android:id="@+id/View1"
        android:layout_marginTop="70dp"
        android:padding="10dp"
        style="@style/matchWidthWrapHeight"
        >
        <ImageView
            android:id="@+id/image1"
           style="@style/matchWidthheightMatch"
            android:src="@drawable/pic1"
            />
        <ImageView
            android:id="@+id/image2"
            style="@style/matchWidthheightMatch"
            android:src="@drawable/pic2"
            />
        <ImageView
            android:id="@+id/image3"
            style="@style/matchWidthheightMatch"
            android:src="@drawable/pic3"
            />


    </ViewFlipper>
    <LinearLayout
        style="@style/matchWidthWrapHeight"
        android:orientation="horizontal"
        android:gravity="center"
       android:padding="10dp"
        android:layout_below="@+id/View1"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/buttonStart"
       style="@style/wrapWidthheightWrap"
            android:padding="15dp"

            android:background="@drawable/ic_play_circle_filled_black_24dp"
            android:layout_height="75dp" />

        <Button
            android:id="@+id/buttonStop"
           style="@style/wrapWidthheightWrap"
            android:padding="15dp"
            android:background="@drawable/ic_pause_circle_filled_black_24dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <ViewFlipper
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewFlipper"
        android:layout_alignBottom="@+id/buttonwardentop"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="267dp" />

</RelativeLayout>
