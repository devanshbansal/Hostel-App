<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"   style="@style/matchWidthheightMatch"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_rating__bar"
    tools:context="com.ektastudio.engggirl.hostliz.Rating_Bar">
    <Button
        android:id="@+id/buttonRate"
      style="@style/matchWidthWrapHeight"
        android:drawableLeft="@drawable/ic_keyboard_arrow_left_white_24dp"
        android:background="@color/colorPrimary"
        android:text="Give your Rating!"
        />

    <TextView
        style="@style/wrapWidthheightWrap"
        android:text=""
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:id="@+id/textShowRating"
        android:layout_below="@+id/buttonRate"
        android:layout_alignParentStart="true" />

    <RatingBar
        style="@style/wrapWidthheightWrap"
        android:id="@+id/ratingBar"
        android:numStars="5"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:layout_below="@+id/textShowRating"
        />
    <Button
    android:layout_width="wrap_content"
        android:drawableLeft="@drawable/ic_thumb_up_black_24dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnRate"
        android:layout_marginLeft="10dp"
        android:background="@color/colorPrimary"
        android:text="Rate Me!"
        android:padding="20dp"
        android:layout_below="@+id/ratingBar"

        />
</RelativeLayout>
