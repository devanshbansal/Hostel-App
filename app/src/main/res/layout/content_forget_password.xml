<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" style="@style/matchWidthheightMatch"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    tools:context="com.ektastudio.engggirl.hostliz.ForgetPassword">
    <Button
        android:id="@+id/buttonForgetTop"
       style="@style/matchWidthWrapHeight"

        android:background="@color/colorPrimary"
        android:text="Forget Password"

        />
    <android.support.design.widget.TextInputLayout android:id="@+id/TextForgetPass"
        style="@style/matchWidthWrapHeight"
    android:layout_below="@+id/buttonForgetTop"
        android:layout_marginTop="20dp"
        >

        <AutoCompleteTextView
            style="@style/matchWidthWrapHeight"
            android:id="@+id/EditPassword"
            android:padding="10dp"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            android:hint="Enter email used while creating Account"
            />
    </android.support.design.widget.TextInputLayout>

    <Button
        style="@style/matchWidthWrapHeight"
        android:text="Get password"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/buttongetPassword"
        android:layout_below="@+id/TextForgetPass"
        android:background="@android:color/holo_orange_dark"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="@style/matchWidthWrapHeight"
        android:text="Sign-in"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/button3"
        android:background="@android:color/holo_orange_dark"
        android:layout_below="@+id/buttongetPassword"
        android:layout_alignParentStart="true" />


</RelativeLayout>
