<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"   style="@style/matchWidthheightMatch"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    tools:context="com.ektastudio.engggirl.hostliz.Register_Warden">
    <Button
        android:id="@+id/buttonwardentop"
     style="@style/matchWidthWrapHeight"
        android:drawableLeft="@drawable/ic_keyboard_arrow_left_white_24dp"
        android:background="@color/colorPrimary"
        android:text="Register Warden"
        />
    <LinearLayout
        style="@style/matchWidthWrapHeight"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:layout_below="@+id/buttonwardentop"
        >
        <TextView
            style="@style/matchWidthWrapHeight"
            android:text="Register Warden"
            android:textStyle="bold"
            android:textColor="#795548"
            />

        <android.support.design.widget.TextInputLayout android:id="@+id/TextRegUser"
            style="@style/matchWidthWrapHeight"

            >

            <EditText
                style="@style/matchWidthWrapHeight"
                android:id="@+id/EditRegText"
                android:hint="Name"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout android:id="@+id/TextPassword"
            style="@style/matchWidthWrapHeight"

            >

            <EditText
                style="@style/matchWidthWrapHeight"
                android:id="@+id/EditPassword"
                android:inputType="textPassword"
                android:hint="Password"
                android:maxLength="8"

                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout android:id="@+id/TextPasswordConfirm"
            style="@style/matchWidthWrapHeight"

            >

            <EditText
                style="@style/matchWidthWrapHeight"
                android:id="@+id/EditPasswordConfrm"
                android:hint="Confirm password"
                android:inputType="textPassword"
                android:maxLength="8"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout android:id="@+id/TextEmail"
            style="@style/matchWidthWrapHeight"            >
            <AutoCompleteTextView android:id="@+id/email"
                style="@style/matchWidthWrapHeight"
                android:hint="Email-id"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            style="@style/matchWidthWrapHeight"
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_marginTop="5dp"
            >
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/ButtonRegister"
                android:background="@android:color/holo_orange_dark"
                android:text="@string/Reg"
                android:layout_marginRight="5dp"
                />
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnCancel"
                android:background="@android:color/holo_orange_dark"
                android:text="Cancel"
                android:layout_marginLeft="5dp"
                />

        </LinearLayout>




    </LinearLayout>

</RelativeLayout>
