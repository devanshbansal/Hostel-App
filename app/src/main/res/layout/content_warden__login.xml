<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" style="@style/matchWidthheightMatch"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    tools:context="com.ektastudio.engggirl.hostliz.Warden_Login"
    android:orientation="vertical">
    <Button
        android:id="@+id/buttonWardenLoginTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_keyboard_arrow_left_white_24dp"
        android:background="@color/colorPrimary"
        android:text="Warden"

        />

    <LinearLayout
        style="@style/matchWidthWrapHeight"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        >
    <LinearLayout
        style="@style/matchWidthWrapHeight"
        android:orientation="horizontal"
        >
        <TextView
            style="@style/wrapWidthheightWrap"
            android:id="@+id/TextHead"
            android:text="@string/userHead"
            android:textStyle="bold"
        android:textColor="#795548"
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>

    <android.support.design.widget.TextInputLayout android:id="@+id/TextInput1"
        style="@style/matchWidthWrapHeight"
        >
        <EditText
            style="@style/matchWidthWrapHeight"
            android:id="@+id/EditText1"
            android:hint="Enter your name"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout android:id="@+id/TextInput2"
        style="@style/matchWidthWrapHeight"
        >
        <EditText
            style="@style/matchWidthWrapHeight"
            android:id="@+id/EditText2"
            android:hint="Enter your password"
            android:inputType="textPassword"
            />

    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        style="@style/matchWidthWrapHeight"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_weight="100"
        android:layout_marginTop="20dp"
        >
        <Button
            style="@style/wrapWidthheightWrap"
            android:id="@+id/ButtonSub"
            android:background="@android:color/holo_orange_dark"
            android:text="Login"
            android:layout_weight="50"
            android:layout_marginRight="10dp"
            />


        <Button
            android:id="@+id/btnCancel1"
            style="@style/wrapWidthheightWrap"
            android:background="@android:color/holo_orange_dark"
            android:text="Manage Students"
            android:layout_weight="50"
            />



    </LinearLayout>
        <TextView
            style="@style/matchWidthWrapHeight"
            android:id="@+id/TextForget"
            android:text="@string/forgetlink"
            android:textStyle="bold"
            android:textColor="#795548"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:textColorHighlight="@color/colorPrimary"
            />


</LinearLayout>
</LinearLayout>